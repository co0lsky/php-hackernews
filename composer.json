{
    "name": "skychin/php-hackernews",
    "type": "library",
    "description": "A PHP wrapper for HackerNews API",
    "keywords": [
        "skychin",
        "php-hackernews"
    ],
    "homepage": "https://github.com/skychin/php-hackernews",
    "license": "MIT",
    "authors": [
        {
            "name": "Sky Chin",
            "email": "sky4just@gmail.com",
            "homepage": "http://www.skychin.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SkyChin\\HackerNews\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SkyChin\\HackerNews\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
